<%- include("../partials/header")%>
<%- include("../partials/navbar")%>
<link rel="stylesheet" href="/css/profile.css">

<div class="container" style="margin-top: 5rem;">

 <div class="row">
    <%for(let user of users){%>
     <div class="col-md-2">
    
      <div class="card text-center">
         
          <% if(user.profile){%>
          <img src="<%= user.profile.pic%>"  alt="hii">
          <% } else { %>
            <img src="https://res.cloudinary.com/pallishree-saswat/image/upload/v1620385155/vy8fcz43bokpxszi4vl4.png" class="img-fluid"  alt="hii"> 
          <% } %>

          <% if(currentUser.id == user._id) {%>
            <a href="/profile" class=" text-capitalize link" style="text-decoration: none; color: rgb(197, 51, 51);"><%= user.username %></a>
            <% } else { %>
              <a href="/user/<%=user._id%>" class=" text-capitalize  link" style="text-decoration: none; color: rgb(197, 51, 51);"> <%= user.username %></a>
            <% } %>

      </div>
    
     </div>
     <% } %>
 </div>
 </div>
 </div>
</div>