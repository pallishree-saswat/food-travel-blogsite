<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" style="margin-top: 5rem;">
    <div class="row">
        <div class="col-md-3">
            <%if(obj.profile){%>
            <div class=" card">
                <div class="card-header text-center"> Profile </div>
                <div class="card-body text-center">
                    <h5 class="card-title text-capitalize"><%= obj.profile.user.username %></h5>
                    <p class="card-text"><%= obj.profile.user.email %> </p>
                    <p class="card-text">Followings-:<%= obj.profile.user.following.length%> </p>
                    <p class="card-text">Followers-:<%=obj.profile.user.followers.length%> </p>
                    <p class="card-text">Posts-:<%= obj.profile.user.posts.length %> </p>
                 <p>status- <%= obj.profile.status %> </p>
                 <p>status- <%= obj.profile.company %> </p>
                 <p>status- <%= obj.profile.bio %> </p>
                 <p>status- <%= obj.profile.location %> </p>
                 <img src="<%= obj.profile.pic %>" class="img-fluid">

                 <% if( obj.profile._id) { %>
                  <button class="btn btn-success">  <a href="/profile/<%= obj.profile._id %>/edit">Edit</a></button>
                 <% } else { %> 
           
                    <button class="btn btn-success"><a href="/profile/new">Add Profile</a></button>

                    <% } %>
                  </div>
            </div>
            <% } %>
        </div>
   
    <div class="col-md-9"> 
 
    <div class="card " style="max-width: 540px; border: none; background-color: transparent;">
        <%if(obj.profile.user.posts){%>
            <%for(let post of obj.profile.user.posts){%>
        <div class="row g-0 mb-2 main-card" >
         
          <div class="col-md-3">
            <img src="<%= post.img %>" alt="..." width="100%" height="100%">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"  ><a href="/posts/<%= post._id %>"><%= post.name %></a> </h5>
              <p class="card-text"><%= post.snippet %> ...</p>
              <p class="card-text"><small class="text-muted">Last updated </small></p>
            </div>
          </div>
           </div>
        <% } %>

        <% } %>
      </div>
        </div>

   
       
    </div>
</div>