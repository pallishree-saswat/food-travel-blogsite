  
<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 11rem;">
    <a href="/" class="btn btn-outline-secondary">Go Back</a>
            <form class="validated-form" action="/profile/<%=profile._id%>?_method=PATCH" method="POST"  style="max-width:70%;margin:10px auto" novalidate>
                <div class="mb-3">
                  <label for="name" class="form-label">Status</label>
                  <input type="text" class="form-control" id="name" placeholder="status" name="profile[status]" value="<%=profile.status%>" required>
                 
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Company</label>
                    <input type="text" class="form-control" id="name" placeholder="Company" name="profile[company]" value="<%=profile.company%>" required>
                   
                  </div>
                  <div class="mb-3">
                    <label for="name" class="form-label">Location</label>
                    <input type="text" class="form-control" id="name" placeholder="Location" name="profile[location]" value="<%=profile.location%>" required>
                   
                  </div>
            
                <div class="mb-3">
                    <label for="desc" class="form-label">Bio</label>
                    <textarea class="form-control" id="bio" cols="30" rows="5" name="profile[bio]" required> <%=profile.bio%> </textarea>
                </div>
               
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        
   
</div>

<%- include("../partials/footer")%>